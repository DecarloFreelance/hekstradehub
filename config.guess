#!/bin/bash
# HekTradeHub Configuration Check Script
# Similar to GNU config.guess but for trading system validation

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Activate virtual environment if it exists
if [ -f ".venv/bin/activate" ]; then
    source .venv/bin/activate
fi

# Run the Python configuration validator
python3 config.py
exit $?
